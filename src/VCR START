70  PRINT :CC$ = "CHARACTER SET"
80  POKE  - 16368,0: POKE  - 16384,0: POKE 103,1: POKE 104,64: POKE  - 16384,0: PRINT  CHR$ (4)"BLOAD"CC$",A$D00"
90  PRINT  CHR$ (4)"RUN VCR"
100  HOME : VTAB 20: HTAB 1: INPUT "NEW LIBRARY NAME:";NL$: IF NL$ = "" THEN  GOTO 5
